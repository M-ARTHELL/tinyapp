<header>
  <nav class = "navbar navbar-expand-md navbar-dark bg-success">
    <a class = "navbar-brand" href="/urls">TinyApp</a>

    <button
      class = "navbar-toggler"
      type = "button"
      data-toggle = "collapse"
      data-target = "#navbarNavAltMarkup"
      aria-controls = "navbarNavAltMarkup"
      aria-expanded = "false"
      aria-label = "Toggle navigation"
    >
      <span class = "navbar-toggler-icon"></span>
    </button>

    <div class = "collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class = "navbar-nav">
        <a class = "nav-item nav-link" href = "/urls">My URLs</a>
        <a class = "nav-item nav-link" href = "/urls/new">Create New URL</a>
      </div>
    </div>

      <!-- shows user id and logout button if user is logged in -->
      <% if (user) { %>
        <span class = "navbar-text" style="color: black; margin-right: 10px;">Logged in as: <%= user.email %></span>
        
        <form method="post" action="/logout">
          <input type = "submit" class = "btn btn-outline-dark" value = "Logout">
        </form>

      <!-- shows login and register buttons if user is logged out -->
      <% } else { %>
        <div class = "navbar-nav">
          <a class = "nav-item nav-link" href = "/login">Login</a>
          <a class = "nav-item nav-link" href = "/register">Register</a>
        </div>
      <% } %>
  </nav>
</header>